@using HotelWebDemo.Models.Database

@model Customer

@{
    bool isCreate = Model.Id == 0;
}

<h1 class="mt-4 mb-5">
    @(isCreate ? "New Customer" : $"Customer: {Model.FullName}")
</h1>

@if (!isCreate)
{
    <div class="actions mb-4">
        <form asp-action="ResetPassword">
            <input type="hidden" asp-for=@Model.Id />
            <button type="submit" class="btn btn-warning p-2">Reset password</button>
        </form>
    </div>
}

<form asp-action="Upsert" method="@(isCreate ? "POST" : "PUT")">
    @if (!isCreate)
    {
        <input type="hidden" asp-for=@Model.Id />
    }

    <partial name="_GeneralFieldset" model="@Model" />
    <partial name="_IdentityFieldset" model="@Model" />
    <partial name="_AddressFieldset" model="@Model" />

    <button type="submit" class="btn btn-lg btn-primary mt-4 px-4">Save</button>
</form>