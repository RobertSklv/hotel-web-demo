@using HotelWebDemo.Models.Database
@using HotelWebDemo.Models.ViewModels

@model CustomerViewModel

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "Identification";

    List<Country> countries = ViewData["Countries"] as List<Country> ?? new();
}

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.NationalId></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.NationalId class="form-control d-block w-100" />
        <span asp-validation-for=@Model.NationalId class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.PassportId></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.PassportId class="form-control d-block w-100" />
        <span asp-validation-for=@Model.PassportId class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.Citizenship></label>
    </div>
    <div class="col-12 col-lg-8">
        <select asp-for=@Model.CitizenshipId
                class="form-select d-block w-100"
                asp-items="new SelectList(
                                countries ?? new List<Country>(),
                                nameof(Country.Id),
                                nameof(Country.Name))">
            <option value="0">-- Please select --</option>
        </select>
        <span asp-validation-for=@Model.Citizenship class="text-danger"></span>
    </div>
</div>
