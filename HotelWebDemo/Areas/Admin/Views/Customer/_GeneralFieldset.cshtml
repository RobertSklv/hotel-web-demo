@using HotelWebDemo.Models.Database
@using HotelWebDemo.Models.ViewModels

@model CustomerViewModel

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "General information";
}

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.FirstName></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.FirstName class="form-control d-block w-100" />
        <span asp-validation-for=@Model.FirstName class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.MiddleName></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.MiddleName class="form-control d-block w-100" />
        <span asp-validation-for=@Model.MiddleName class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.LastName></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.LastName class="form-control d-block w-100" />
        <span asp-validation-for=@Model.LastName class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.Email></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.Email class="form-control d-block w-100" />
        <span asp-validation-for=@Model.Email class="text-danger"></span>
    </div>
</div>
