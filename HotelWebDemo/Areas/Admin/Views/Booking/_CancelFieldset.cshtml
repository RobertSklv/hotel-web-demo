@using HotelWebDemo.Models.Database
@using HotelWebDemo.Models.ViewModels

@model BookingCancellation

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "Cancel booking";
}

<form asp-action="Cancel" asp-route-bookingId="@Model.Booking.Id">
    <div class="row mb-4">
        <div class="col-12 col-lg-4">
            <label asp-for=@Model.Reason></label>
        </div>
        <div class="col-12 col-lg-8">
            <textarea asp-for=@Model.Reason class="form-control d-block w-100" rows="3"></textarea>
            <span asp-validation-for=@Model.Reason class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-lg btn-danger">Cancel booking</button>
</form>