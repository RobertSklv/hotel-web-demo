@using HotelWebDemo.Models.Database

@model RoomCategory

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "General";

    List<Hotel> hotels = ViewData["Hotels"] as List<Hotel> ?? new();
}

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.Name></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.Name class="form-control d-block w-100" />
        <span asp-validation-for=@Model.Name class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.ShortDescription></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.ShortDescription class="form-control d-block w-100" />
        <span asp-validation-for=@Model.ShortDescription class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.LongDescription></label>
    </div>
    <div class="col-12 col-lg-8">
        <input asp-for=@Model.LongDescription class="form-control d-block w-100" />
        <span asp-validation-for=@Model.LongDescription class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.Hotel></label>
    </div>
    <div class="col-12 col-lg-8">
        <select asp-for=@Model.HotelId
                class="form-select d-block w-100"
                asp-items="new SelectList(
                                hotels,
                                nameof(Hotel.Id),
                                nameof(Hotel.Name))">
            <option value="0">-- Please select --</option>
        </select>
        <span asp-validation-for=@Model.Hotel class="text-danger"></span>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <label asp-for=@Model.Price></label>
    </div>
    <div class="col-12 col-lg-8">
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input asp-for=@Model.Price class="form-control d-block" />
            <span asp-validation-for=@Model.Price class="text-danger"></span>
        </div>
    </div>
</div>
