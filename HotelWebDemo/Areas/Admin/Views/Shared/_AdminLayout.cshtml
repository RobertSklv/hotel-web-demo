
@{
    Layout = "_BaseLayout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/main_admin.css" />
}

@section ScriptsHead
{
    <script src="~/js/Table/table.js"></script>
}

@section Header
{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Hotel Web Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Customers
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">All customers</a></li>
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Create">Create</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hotels
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Hotel" asp-action="Index">All hotels</a></li>
                                <li><a class="dropdown-item" asp-controller="Hotel" asp-action="Create">Create</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Accomodations
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="RoomCategory" asp-action="Index">Room categories</a></li>
                                <li><a class="dropdown-item" asp-controller="RoomCategory" asp-action="Create">Create room category</a></li>
                                <li><hr class="dropdown-divider border-light"></li>
                                <li><a class="dropdown-item" asp-controller="Room" asp-action="Index">All rooms</a></li>
                                <li><a class="dropdown-item" asp-controller="Room" asp-action="Create">Add room</a></li>
                                <li><a class="dropdown-item" asp-controller="RoomFeature" asp-action="Index">Room features</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Account</a></li>
                                <li><hr class="dropdown-divider border-light"></li>
                                <li class="dropdown-item p-0">
                                    <form asp-controller="Login" asp-action="Logout">
                                        <button type="submit" class="text-start p-3 border-0 bg-transparent text-left w-100">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}

<div class="row">
    <div class="col-1">
        @await RenderSectionAsync("LeftColumn", required: false)
    </div>
    <div class="col-10">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="col-1">
        @await RenderSectionAsync("RightColumn", required: false)
    </div>
</div>

@section Footer
{
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HotelWebDemo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
}

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}